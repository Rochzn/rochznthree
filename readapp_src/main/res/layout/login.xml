<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_name"
        android:contentDescription="@string/app_name"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/img" />

    <TextView
        android:id="@+id/reg_number1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_name"
        android:layout_marginTop="60dp"
        android:padding="10dp"
        android:text="@string/message"
        android:textColor="@color/teal_200"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/reg_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/reg_number1"
        android:layout_toEndOf="@+id/reg_number1"
        android:autofillHints="username"
        android:inputType="text"
        android:padding="10dp" />

    <TextView
        android:id="@+id/reg_number2"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_number1"
        android:padding="10dp"
        android:text="密码:"
        android:textColor="@color/teal_200"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/reg_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/reg_number2"
        android:layout_toRightOf="@+id/reg_number2"
        android:inputType="textPassword"
        android:padding="10dp" />


    <Button
        android:id="@+id/bt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reg_password"
        android:layout_marginTop="40dp"
        android:background="#FAD322"
        android:text="登录"
        android:textSize="40dp" />

    <Button
        android:id="@+id/bt_name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_name"
        android:layout_marginTop="40dp"
        android:background="#FAD322"
        android:text="注册"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/tv_qi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="切换到其他方式"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_name1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="登录代表同意QQ账号认证服务条款"
        android:textSize="20dp" />

</RelativeLayout>